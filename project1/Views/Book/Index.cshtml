@using project1.ViewModels
@model List<BookVm>
@section Title {
Book
}
@section SubTitle {
Index
}

@section Button {
    <a asp-controller="Book" asp-action="Create" class="btn btn-primary"> Create</a>
}
@if (!Model.Any())
{
    <div class="card-body">

        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
            no data found
        </div>

    </div>
}
else
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:10px">#</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>PublishDate</th>
                    <th>Image</th>
                    <th>Categories</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.Publisher</td>
                        <td>@item.PublishDate</td>
                        <td><img src="~/img/book/@item.imageUrl" width="50px" /></td>
                        <td>@string.Join(", ",item.Categories)</td>
                        <td>
                            <a asp-controller="Book" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                            <a asp-controller="Book" asp-action="Details" asp-route-Id="@item.Id">Details</a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-Id="@item.Id" class="js-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
@section Scripts {
    <script>
        document.querySelectorAll(".js-delete").forEach((btn) => {
            btn.addEventListener("click", async () => {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        const id = btn.dataset.id;
                        const response = await fetch(`/Book/Delete/${id}`, { method: 'POST' });

                        if (response.ok) {
                            btn.closest("tr").remove();
                            const Toast = Swal.mixin({
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 1500,
                                timerProgressBar: true,
                            })
                            Toast.fire({
                                icon: 'success',
                                title: 'Book Deleted Sucessfully',
                            })
                        }
                    }
                });
            })
        })
    </script>
}
